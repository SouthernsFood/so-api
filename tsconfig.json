{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "watch": true
  },
  "ts-node": {
    "files": true
  },
  "include": ["./src/**/*.ts", "env.d.ts"],
  "exclude": ["node_modules"]
}
